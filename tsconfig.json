{
    "compilerOptions": {        
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2016", "es2020.string"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",

        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,

        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,

        "noImplicitAny": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*"
    ],
}